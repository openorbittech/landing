---
export const prerender = true;
import Layout from "../layouts/Layout.astro";
import { Navbar } from "../components/landing/Navbar";

const title = "404: Lost in Orbit | OpenOrbit";
const description = "404 not found";
---

<Layout title={title} description={description} noindex={true}>
    <div
        class="relative min-h-screen bg-[#070A12] text-[#F4F6FF] flex flex-col"
    >
        <Navbar client:load />

        <main
            class="flex-grow flex items-center justify-center relative overflow-hidden pt-20"
        >
            {/* Background Elements */}
            <div class="absolute inset-0 z-0" aria-hidden="true">
                <div
                    class="absolute inset-0 bg-gradient-to-br from-[#070A12] via-[#0B0F1C] to-[#070A12]"
                >
                </div>
                <!-- <AnimatedMeshGradientOverlay client:load /> -->
            </div>

            <div class="container mx-auto px-6 relative z-10 text-center">
                <div class="max-w-3xl mx-auto">
                    {/* Heading */}
                    <h1 class="mb-6">
                        <span
                            class="text-7xl md:text-9xl font-bold tracking-tight font-[family-name:var(--font-space-grotesk)] gradient-text block animate-slide-up-text"
                        >
                            404
                        </span>
                        <span
                            class="text-3xl md:text-5xl font-bold tracking-tight font-[family-name:var(--font-space-grotesk)] text-white/90 block mt-2 animate-fade-in-up"
                            style="animation-delay: 300ms;"
                        >
                            Lost in Orbit?
                        </span>
                    </h1>

                    {/* Text */}
                    <p
                        class="text-xl text-[#A7B0C8] mb-10 leading-relaxed font-[family-name:var(--font-dm-sans)] animate-fade-in-up"
                        style="animation-delay: 600ms;"
                    >
                        There is nothing here.
                    </p>
                </div>
            </div>
        </main>
    </div>
</Layout>

<style>
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes slideUpText {
        from {
            transform: translateY(100%);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .animate-fade-in-up {
        opacity: 0;
        animation: fadeInUp 0.8s cubic-bezier(0.21, 0.47, 0.32, 0.98) forwards;
    }

    .animate-slide-up-text {
        animation: slideUpText 0.5s cubic-bezier(0.21, 0.47, 0.32, 0.98)
            forwards;
    }

    .flex-grow {
        flex-grow: 1;
    }
</style>
