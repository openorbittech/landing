---
export const prerender = true;
import Layout from "../layouts/Layout.astro";
import { Navbar } from "../components/landing/Navbar";
import { Hero } from "../components/landing/Hero";
import Services from "../components/landing/Services.astro";
import { Work } from "../components/landing/Work";
// import { Testimonials } from "../components/landing/Testimonials";
import { CTA } from "../components/landing/CTA";
import Footer from "../components/landing/Footer.astro";
import { FloatingCTA } from "../components/landing/FloatingCTA";

// SEO Configuration
const title =
  "High-Impact Software Development | Web, Mobile & AI Solutions | OpenOrbit";
const description =
  "Custom web, mobile & AI solutions designed to scale. Trusted by startups and enterprises. Free consultation available.";

const keywords = [
  "software development agency San Francisco",
  "custom software development company",
  "enterprise web application development",
  "React development agency",
  "Next.js development company",
  "AI software development",
  "startup MVP development",
  "mobile app development company USA",
  "cloud migration services",
  "DevOps consulting services",
];
---

<Layout title={title} description={description} keywords={keywords}>
  <div
    class="relative min-h-screen bg-[#070A12] text-[#F4F6FF]"
    itemscope
    itemtype="https://schema.org/WebPage"
    role="none"
  >
    <Navbar client:load />
    <article itemscope itemtype="https://schema.org/Service">
      <Hero client:visible />
      <Services />
      <Work client:visible />
      <!-- <Testimonials client:visible /> -->
      <CTA client:visible />
    </article>
    <Footer />
    <FloatingCTA client:visible />
  </div>
</Layout>
