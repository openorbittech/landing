---
export const prerender = true;
import Layout from '../layouts/Layout.astro';
import { Navbar } from '../components/landing/Navbar';
import { Hero } from '../components/landing/Hero';
import { Services } from '../components/landing/Services';
import { Work } from '../components/landing/Work';
import { Testimonials } from '../components/landing/Testimonials';
import { CTA } from '../components/landing/CTA';
import { Footer } from '../components/landing/Footer';
import { FloatingCTA } from '../components/landing/FloatingCTA';

const title = "OpenOrbit | Award-Winning Software Development Agency";
const description = "Premium software development services for web apps, mobile apps, and cloud solutions.";
---

<Layout title={title} description={description}>
  <main class="relative min-h-screen bg-[#070A12] text-[#F4F6FF]">
    <Navbar client:load />
    <Hero client:visible />
    <Services client:visible />
    <Work client:visible />
    <Testimonials client:visible />
    <CTA client:visible />
    <Footer client:visible />
    <FloatingCTA client:visible />
  </main>
</Layout>
